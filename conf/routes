# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
POST    /genquest                   controllers.Application.genquest
POST    /submitanswers              controllers.Application.submitanswers
POST    /login                      controllers.Application.login
POST    /logout                     controllers.Application.logout
GET     /register                   controllers.Application.register
POST    /adduser                    controllers.Application.adduser
GET     /editcategory               controllers.Application.editcategory
POST    /addcategory                controllers.Application.addcategory
POST    /updatecategory             controllers.Application.updatecategory
POST    /deletecategory             controllers.Application.deletecategory
GET     /editquestion               controllers.Application.editquestion
POST    /addquestion                controllers.Application.addquestion
POST    /updatequestion             controllers.Application.updatequestion
POST    /deletequestion             controllers.Application.deletequestion


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
